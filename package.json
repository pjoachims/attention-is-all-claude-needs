{
  "name": "attention-is-all-claude-needs",
  "displayName": "Attention Is All Claude Needs",
  "description": "Monitor Claude Code sessions across VS Code windows - see which need attention, jump to them instantly",
  "version": "0.4.0",
  "publisher": "pjoachims",
  "repository": {
    "type": "git",
    "url": "https://github.com/pjoachims/attention-is-all-claude-needs"
  },
  "license": "MIT",
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "assistant",
    "monitor"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-monitor",
          "title": "Claude ATTN",
          "icon": "resources/claude-icon.svg"
        }
      ]
    },
    "views": {
      "claude-monitor": [
        {
          "id": "claudeSessions",
          "name": "Sessions"
        }
      ]
    },
    "commands": [
      {
        "command": "claude-monitor.refresh",
        "title": "Refresh Sessions",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-monitor.focusSession",
        "title": "Focus Session Terminal"
      },
      {
        "command": "claude-monitor.setupHooks",
        "title": "Claude ATTN: Setup Hooks"
      },
      {
        "command": "claude-monitor.cleanupStaleSessions",
        "title": "Claude ATTN: Cleanup Stale Sessions"
      },
      {
        "command": "claude-monitor.renameSession",
        "title": "Rename Session",
        "icon": "$(edit)"
      },
      {
        "command": "claude-monitor.removeHooks",
        "title": "Claude ATTN: Remove Hooks (Uninstall)"
      },
      {
        "command": "claude-monitor.cleanupAllSessions",
        "title": "Claude ATTN: Remove All Sessions"
      }
    ],
    "configuration": {
      "title": "Claude ATTN",
      "properties": {
        "claudeMonitor.cleanupInterval": {
          "type": "number",
          "default": 30,
          "description": "Seconds between automatic cleanup checks for dead sessions"
        },
        "claudeMonitor.globalMode": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, show all Claude sessions across all projects and switch VS Code windows when focusing. When disabled, only show sessions from the current workspace."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "claude-monitor.refresh",
          "when": "view == claudeSessions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claude-monitor.renameSession",
          "when": "view == claudeSessions && viewItem == session",
          "group": "inline"
        },
        {
          "command": "claude-monitor.renameSession",
          "when": "view == claudeSessions && viewItem == session",
          "group": "1_modify"
        },
        {
          "command": "claude-monitor.focusSession",
          "when": "view == claudeSessions && viewItem == session",
          "group": "2_navigate"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run compile:tests",
    "compile:tests": "tsc -p ./tsconfig.test.json",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "test": "npm run test:unit",
    "test:unit": "mocha --config .mocharc.json",
    "test:integration": "vscode-test",
    "test:coverage": "c8 npm run test:unit"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.0",
    "c8": "^9.0.0",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^5.3.0"
  }
}
